{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": ".",
      "sourceMap": true,
      "declaration": false,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*", 
      "installer-wrapper.js"
    ],
    "exclude": [
      "node_modules", 
      "dist"
    ]
  }